---
const { icon: Icon, iconColor, title, text } = Astro.props;
---

<article
  class="flex flex-col gap-6 bg-special border-1 border-white/10 p-10 rounded-xl min-h-[300px] group
  hover:-translate-y-2 hover:border-white/40 transition-all"
>
  <header class="flex flex-col gap-4">
    <Icon
      class={`p-2 rounded-xl bg-dark-blue/40 size-12 ${iconColor} group-hover:scale-110 transition-all`}
    />
    <h3 class="text-xl font-bold group-hover:text-light-blue transition-all">
      {title}
    </h3>
  </header>
  <div class="flex flex-col gap-2 flex-grow basis-0 h-full">
    <p class="text-gray-400 font-medium">{text}</p>
  </div>
</article>
