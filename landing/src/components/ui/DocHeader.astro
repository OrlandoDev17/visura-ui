---
import Link from "@/icons/Link.astro";
---

<header class="ml-[448px] flex justify-between w-full pl-8 pr-24 py-4">
  <img class="w-36 xl:w-42" src="/logo-visura.svg" alt="Visura UI" />
  <div class="flex items-center gap-6">
    <span class="bg-slate-900 px-3 py-1 rounded-full">v1.0.1</span>
    <a
      href="https://github.com/OrlandoDev17/visura-ui"
      target="_blank"
      rel="noopener noreferrer"
      class="flex gap-2 border-b-3 border-gray-600 pb-2 hover:border-light-blue group transition-colors"
    >
      <Link class="group-hover:text-light-blue transition-colors" />
      <span
        class="text-lg font-medium group-hover:text-light-blue transition-colors"
        >GitHub</span
      >
    </a>
  </div>
</header>
