---
const {
  icon: Icon,
  iconColor,
  title,
  description,
  variants,
  link,
} = Astro.props;
---

<article
  data-reveal-child="top"
  class="flex flex-col gap-6 p-10 bg-special rounded-xl border-1 border-white/10 hover:-translate-y-2 hover:shadow-2xl hover:shadow-light-blue/20 transition-all group"
>
  <header class="flex flex-col gap-4">
    <Icon class={`size-12 p-2 rounded-xl bg-dark-blue/40 ${iconColor}`} />
    <h3
      class="text-xl font-semibold group-hover:text-light-blue transition-all"
    >
      {title}
    </h3>
    <p class="text-sm text-gray-400 font-medium">{description}</p>
  </header>
  <div class="flex flex-wrap gap-2 border-b border-white/10 pb-4">
    {
      variants.map((variant: { name: string; link: string }) => (
        <a
          class="text-sm text-white font-medium border-1 border-white/10 px-3 py-1 rounded-full hover:bg-accent transition-all"
          href={variant.link}
        >
          {variant.name}
        </a>
      ))
    }
  </div>
  <footer class="flex items-end justify-between gap-2 flex-grow basis-0 pb-2">
    <span class="text-sm text-gray-400 font-medium"
      >{variants.length} variantes</span
    >
    <a
      href={link}
      class="font-medium border-b-2 border-transparent hover:border-white/40 transition-all"
      >Ver demo</a
    >
  </footer>
</article>
