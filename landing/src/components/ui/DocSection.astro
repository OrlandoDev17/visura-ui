---
const { icon: Icon, title, borderColor, bgColor, textColor, id } = Astro.props;
---

<div class="flex flex-col gap-6 max-w-5xl w-full" id={id}>
  <header class="flex items-center gap-4">
    <Icon class={`size-11 p-2 rounded-lg ${bgColor} ${textColor}`} />
    <h3 class="text-2xl font-semibold tracking-wide">{title}</h3>
  </header>
  <article
    class={`flex flex-col gap-6 p-8 bg-primary rounded-lg border border-gray-500/20 ${borderColor} transition duration-300`}
  >
    <slot />
  </article>
</div>
