---
const { type = "outlined", label, href, className, icon: Icon } = Astro.props;
---

<button>
  <a
    target="_blank"
    rel="noopener noreferrer"
    href={href}
    class={`flex items-center gap-2 text-base xl:text-lg font-medium px-6 py-2 rounded-lg cursor-pointer
          hover:-translate-y-2 transition-all  ${type === "outlined" ? "text-white bg-dark-blue border-1 border-gray-800 hover:bg-accent" : "bg-light-blue text-dark-blue"} ${className}`}
  >
    {label}
    {Icon && <Icon class="size-4" />}
  </a>
</button>
