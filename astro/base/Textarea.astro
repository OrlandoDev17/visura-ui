---
interface TextareaProps {
  placeholder?: string;
  className?: string;
}

const { placeholder, className }: TextareaProps = Astro.props;
---

<textarea
  placeholder={placeholder}
  class={`py-3 px-6 border-1 border-white/10 bg-slate-800/50 outline-none focus:border-white/20 transition-colors rounded-xl ${className}`}
></textarea>
