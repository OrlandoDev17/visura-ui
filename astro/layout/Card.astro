---
import Button from "../base/Button.astro";

interface CardProps {
  title?: string;
  content?: string;
  button?: boolean;
  buttonLabel?: string;
  className?: string;
}

const {
  title,
  content,
  button = false,
  buttonLabel,
  className,
}: CardProps = Astro.props;
---

<article
  class={`flex flex-col gap-6 p-6 border border-gray-200 rounded-xl bg-slate-800/50 max-w-sm ${className}`}
>
  <h2 class="text-2xl font-bold">{title}</h2>
  <p class="text-sm text-gray-400">{content}</p>
  {button && <Button className="w-fit" label={buttonLabel} />}
</article>
