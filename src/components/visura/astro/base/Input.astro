---
interface InputProps {
  placeholder?: string;
  type?: "text" | "email" | "password";
  className?: string;
}

const { placeholder, type = "text", className }: InputProps = Astro.props;
---

<input
  type={type}
  placeholder={placeholder}
  class={`py-3 px-4 rounded-xl border-1 border-white/10 bg-slate-800/50 outline-none focus:border-white/20 transition-all ${className}`}
/>
