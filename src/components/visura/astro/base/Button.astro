---
interface ButtonProps {
  label?: string;
  type?: "fill" | "outline" | "link";
  icon?: string;
  disabled?: boolean;
  loading?: boolean;
  className?: string;
}

const {
  label,
  type = "fill",
  icon: Icon,
  disabled = false,
  loading = false,
  className,
}: ButtonProps = Astro.props;

const variants = {
  fill: "bg-light-blue text-dark-blue hover:shadow-lg hover:shadow-light-blue/30",
  outline:
    "text-white bg-dark-blue border border-gray-800 hover:bg-light-blue hover:text-dark-blue hover:shadow-lg hover:shadow-light-blue/30",
  link: "border-b-2 border-gray-800 hover:border-light-blue rounded-none",
};
---

<button
  class={`flex items-center gap-2 px-6 py-2 text-lg font-medium rounded-lg hover:-translate-y-1 transition-all cursor-pointer 
  ${variants[type]}
  ${disabled || loading ? "opacity-50 cursor-not-allowed" : ""}
  ${className}`}
>
  {label}
  {Icon && <Icon />}
  <slot />
</button>
