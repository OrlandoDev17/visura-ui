---
interface ModalProps {
  title?: string;
  content?: string;
}

const { title, content }: ModalProps = Astro.props;
---

<style>
  .modal-open main {
    pointer-events: none;
    backdrop-filter: blur(10px);
  }

  .modal.open {
    visibility: visible;
    opacity: 1;
  }
</style>

<label
  for="modalId"
  class="toggle flex items-center gap-2 px-6 py-2 text-lg font-medium rounded-lg hover:-translate-y-1 transition-all cursor-pointer bg-light-blue text-dark-blue hover:shadow-lg hover:shadow-light-blue/30"
>
  Abrir Modal
  <input type="checkbox" id="modalId" hidden />
</label>

<article
  class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 z-50 bg-special rounded-xl p-8 border-1 border-white/10 w-full max-w-lg invisible opacity-0 modal transition-all"
>
  <div class="flex flex-col items-center gap-6">
    <header
      class="flex items-center justify-center gap-2 border-b border-white/10 pb-4 w-full"
    >
      <h2 class="text-2xl font-bold">{title}</h2>
    </header>
    <div>
      <p class="text-gray-400 font-medium">{content}</p>
    </div>
    <hr class="w-full border-gray-800" />
    <footer>
      <label
        class="toggle flex items-center gap-2 px-6 py-2 text-lg font-medium rounded-lg hover:-translate-y-1 transition-all cursor-pointer bg-light-blue text-dark-blue hover:shadow-lg hover:shadow-light-blue/30"
        for="modalId">Cerrar Modal</label
      >
    </footer>
  </div>
</article>

<script is:inline>
  const checkbox = document.getElementById("modalId");
  const modal = document.getElementsByClassName("modal")[0];

  checkbox.addEventListener("change", () => {
    if (checkbox.checked) {
      modal.classList.add("open");
      document.body.classList.add("modal-open");
    } else {
      modal.classList.remove("open");
      document.body.classList.remove("modal-open");
    }
  });
</script>
