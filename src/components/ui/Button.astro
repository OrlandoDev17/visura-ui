---
const { type = "outlined", label, href, className, icon: Icon } = Astro.props;
---

<button>
  <a
    href={href}
    class={`flex items-center gap-2 text-lg font-medium px-6 py-2 rounded-lg
          hover:-translate-y-2 transition-all  ${type === "outlined" ? "bg-dark-blue border-1 border-gray-800 hover:bg-accent hover:text-dark-blue" : "bg-light-blue text-dark-blue"} ${className}`}
  >
    {label}
    {Icon && <Icon class="size-4" />}
  </a>
</button>
